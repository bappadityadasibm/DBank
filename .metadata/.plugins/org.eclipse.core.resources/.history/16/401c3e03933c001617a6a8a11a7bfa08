@RestController
public class ShopLocationController {

	
	@Autowired
	private ShopLocationService shopLocationService;


	/*@RequestMapping(value = "/{id}")
	public ShopLocation getPricing(@PathVariable int id) {
		ShopLocation shop = shopCreationService.findById(id);
		return shop;
	}*/

	@RequestMapping(value = "/locateshop/{latitude}/{longitude}")
	public ShopLocation locateShop(@PathVariable double latitude, @PathVariable double longitude) throws Exception
	{
		return shopLocationService.findNearestShop(latitude, longitude);
	}
	
	@RequestMapping(value = "/saveshoplocation/{latitude}/{longitude}")
	public ShopLocation locateShop(@PathVariable String shopAddressNumber, @PathVariable String shopAddressPostcode,@PathVariable double shopId) throws Exception
	{
		return shopLocationService.createShopLocation(shopAddressNumber, shopAddressPostcode, shopId);
	}
}
